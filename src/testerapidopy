import customtkinter as ctk
import os

BASE_DIR = os.path.dirname(os.path.abspath(__file__))
ROOT_DIR = os.path.dirname(BASE_DIR)  # sobe do src para REFERENCIACERTA

ctk.set_appearance_mode("dark")
ctk.set_default_color_theme(
    os.path.join(ROOT_DIR, "themes", "red.json")
)

app = ctk.CTk()
app.geometry("400x300")
ctk.CTkButton(app, text="Teste").pack(pady=20)
app.mainloop()